const DumbUser = () => (
  <div>
    {props.user.name}
  </div>
)

const User = (props) => (
  props.loading
    ? <StylishSpinner />
    : <DumbUser />
)

const withLoading = (DumbUser) => (
  (props) => (
    props.loading
      ? <StylishSpinner />
      : <DumbUser />
