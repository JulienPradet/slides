)

const User = withLoading(DumbUser)

const withLoading = (BaseComponent) => (
  (props) => (
    props.loading
      ? <StylishSpinner />
      : <BaseComponent />
  )
)

const withLoading = (
  (isLoading, BaseComponent) => (
    (props) => (
      isLoading(props)
        ? <StylishSpinner />
        : <BaseComponent />
    )
  )
)

const User = (
  withLoading(
    (props) => props.loading,
    DumbUser
  )
